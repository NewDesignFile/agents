{
  "name": "@new-ui/agents",
  "version": "0.6.0",
  "description": "Generate AI agent policy files for web apps and sites.",
  "files": [
    "dist",
    "schemas",
    "templates"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "agents": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc --declaration --outDir dist && cp -r src/schemas dist/ && cp -r src/templates dist/",
    "dev": "node --no-warnings --loader ts-node/esm src/cli.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "prepublishOnly": "npm run validate && npm run build"
  },
  "keywords": [
    "ai-policy",
    "agents",
    "llms"
  ],
  "author": "@planetabhi",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "cosmiconfig": "^9.0.0",
    "fs-extra": "^11.3.0",
    "inquirer": "7.3.3",
    "ora": "^8.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "7.3.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "directories": {
    "test": "test"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true,
    "moduleTypes": {
      "src/**/*": "esm"
    },
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}
