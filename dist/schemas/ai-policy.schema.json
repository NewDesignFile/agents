{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AI Policy Schema",
    "type": "object",
    "properties": {
      "version": { "type": "string" },
      "policy": {
        "type": "object",
        "properties": {
          "agents": { "type": "object" },
          "semantic_sitemap": { "type": "string" },
          "negotiation_api": { "type": "string" }
        },
        "required": ["agents"]
      }
    },
    "required": ["version", "policy"]
  }